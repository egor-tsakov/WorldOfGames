<Application x:Class="WorldOfGames.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WorldOfGames"
             StartupUri="Login.xaml">
    <Application.Resources>
        <!--стили мне лень объяснять да и это не обязательно, в google все есть-->
        <!--Стили для окон логина и регистрации-->
        <Style TargetType="Label" x:Key="defLink">
            <Setter Property="Foreground" Value="#ababab"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Foreground" Value="#5b5b5b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox" x:Key="defTextBox">
            <Setter Property="Foreground" Value="#ababab"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border BorderBrush="#ababab" BorderThickness="1" Background="#252525" x:Name="border">
                            <ScrollViewer x:Name = "PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#5b5b5b"/>
                                <Setter Property="Foreground" Value="#5b5b5b"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#5b5b5b"/>
                                <Setter Property="Foreground" Value="#5b5b5b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox" x:Key="defPasswordBox">
            <Setter Property="Foreground" Value="#ababab"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border BorderBrush="#ababab" BorderThickness="1" Background="#252525" x:Name="border">
                            <ScrollViewer x:Name = "PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#5b5b5b"/>
                                <Setter Property="Foreground" Value="#5b5b5b"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#5b5b5b"/>
                                <Setter Property="Foreground" Value="#5b5b5b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="defButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" TextBlock.FontSize="17" BorderBrush="#ababab" TextBlock.Foreground="#ababab">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" BorderThickness="1" TextBlock.FontSize="17" BorderBrush="#5b5b5b"
                                        TextBlock.Foreground="#5b5b5b">
                                    <Border.Background>
                                        <SolidColorBrush Color="Black" Opacity="0"/>
                                    </Border.Background>
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!--Стили для главного окна-->
        <Style TargetType="Button" x:Key="defButtonWindow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
